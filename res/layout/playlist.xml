<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" 
	android:layout_width="fill_parent" android:layout_height="wrap_content">
    		
		<ImageView android:id="@+id/playback_icon" android:layout_width="40dp" android:layout_height="40dp" 
		    android:contentDescription="@string/playlist" android:paddingTop="1dp" android:paddingLeft="1dp"/>
			
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:layout_width="fill_parent" android:id="@+id/file_name"
				android:layout_height="wrap_content" android:textStyle="bold" android:textColor="@color/white1"
				android:paddingLeft="10dp" android:paddingTop="0dp" android:textSize="17sp"/>
				
			<TextView android:layout_width="fill_parent" android:id="@+id/file_detail" android:textStyle="italic"
				android:layout_height="wrap_content" android:paddingLeft="10dp"
				android:textColor="@color/white1" android:textSize="14sp"/>
		</LinearLayout>
</LinearLayout>